@model IEnumerable<Gummi_Bear_Kingdom.Models.Product>

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h2>Products</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
		<th>Rating</th>
        <th></th>
    </tr>

    @foreach (var listProduct in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelProduct => listProduct.Name)
            </td>
            <td>
                @Html.DisplayFor(modelProduct => listProduct.Cost)
            </td>
        		@{
                    double averageRating = listProduct.GetAverage();
        		}
		    <td>
			    @Html.DisplayFor(m => averageRating)
		    </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = listProduct.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
