@model Gummi_Bear_Kingdom.Models.Review

@{
    ViewData["Title"] = "Review - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create a new review</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Author)
    @Html.EditorFor(model => model.Author)

    @Html.LabelFor(model => model.Comment)
    @Html.EditorFor(model => model.Comment)

    <br>
    @Html.LabelFor(model => model.Rating) <span>:</span>
    @Html.RadioButtonFor(model => model.Rating, 1) <span>1</span>
    @Html.RadioButtonFor(model => model.Rating, 2) <span>2</span>
    @Html.RadioButtonFor(model => model.Rating, 3) <span>3</span>
    @Html.RadioButtonFor(model => model.Rating, 4) <span>4</span>
    @Html.RadioButtonFor(model => model.Rating, 5) <span>5</span>

    @Html.HiddenFor(model => model.ProductId);

    <br>

    <input type="submit" value="Create" class="btn btn-info" />
}

@Html.ActionLink("Back to List", "Index")