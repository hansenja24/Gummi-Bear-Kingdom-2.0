@model IEnumerable<Gummi_Bear_Kingdom.Models.Review>

@{
    ViewData["Title"] = "Location";
}


<h2>Reviews</h2>

<table class="table">
    <tr>
		<th>
            Id
        </th>
		<th>
            Product
        </th>
		<th>
            Author
        </th>
		<th>
            Comment
        </th>
        <th>
            Rating
        </th>
        <th></th>
    </tr>

    @foreach (var listReview in Model)
    {
        <tr>
		    <td>
                @Html.DisplayFor(modelReview => listReview.ReviewId)
            </td>
		    <td>
                <p>Product Name</p>
            </td>
		    <td>
                @Html.DisplayFor(modelReview => listReview.Author)
            </td>
		    <td>
                @Html.DisplayFor(modelReview => listReview.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelReview => listReview.Rating)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listReview.ReviewId }) |
                @Html.ActionLink("Details", "Details", new { id = listReview.ReviewId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listReview.ReviewId })
            </td>
        </tr>
    }
</table>
<p>

</p>